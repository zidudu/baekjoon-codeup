#define _CRT_SECURE_NO_WARNINGS_
#include <stdio.h>

int main() {
	//문자
	char ch;
	//변형 문자
	char change_ch;
	//while (1) {
	//	//입력
	//	scanf("%c", &ch);
	//	//엔터 검사와 공백 검사
	//	if (ch == EOF) break;

#define _CRT_SECURE_NO_WARNINGS_
#include <stdio.h>
int main() {
    //삼각형의 길이 n
    int n;
    //삼각형 모양
    char ar = '*';
    //빈칸
    char empty = ' ';
    //입력
    scanf_s("%d", &n);
    //3부터 99 까지의 홀수 중 하나가 입력된다.
    if (n < 3 || n > 99 || n % 2 == 0) return 0;

    //행은 홀수마다 나와야함. 
    for (int i = 1; i <= n; i = i++) {
        if (i % 2 == 1) {
            int ii =i-1;
            //공백 출력
            for (int k = n / 2; k > ii; k--) {
                //n=7이면 k=3이고,i-1=0이니 3,2,1까지됨.
                //그 다음은 k=3이고, i-1=1이니 3,2까지 됨
                // k=3이고, i-1=2이니 3까지 됨.
                //k=3이고,i-1=3이니 그만 됨.
                printf("%c", empty);
            }
            //값 출력
            for (int j = 1; j <= i; j++)
            {
                printf("%c", ar);
            }
            printf("\n");

        }
    }


    //n=1이면 공백은 0
    // 
    //n=3이면 공백은 1,0  
    //n=5이면 공백은 2,1,0
    //n=7이면 공백은 3,2,1,0
    //n=9이면 공백은 4,3,2,1,0
    //n=11이면 공백은 5,4,3,2,1,0
    //이것들의 규칙은 n/2를 했을때 공백의 값이 나옴.
    //for (int k = n/2; k >= 0; k--) {

    //공백을 출력할때 열마다 공백값이 줄어들음. 시작값은 n/2으로 하고,
    // 조건값에 i-1로 하면 
    // 
    //}


    ////삼각형 출력
    //for (int i = 1; i <= n; i++) {
    //    //공백 출력
    //    for (int j = n; j > i-1; j--) {
    //        printf("%c", empty);
    //    }
    //    //*가 홀수일때만, 즉 k가 홀수일때만 출력
    //    for (int k = 1; k <= i; k++) {

